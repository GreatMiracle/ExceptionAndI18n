    <changeSet id="2023022502_1615-UPDATE-FROM-CSV-TO-TABLE-PRODUCT" author="kien">
        <loadData
                commentLineStartsWith="//"
                encoding="UTF-8"
                file="config/liquibase/csv/ecom_product.csv"
                quotchar="'"
                relativeToChangelogFile="false"
                separator=","
                tableName="ecom_product"
                usePreparedStatements="true">
            <column index="0" name="sku" type="STRING"/>
            <column index="1" name="name" type="STRING"/>
            <column index="2" name="description" type="STRING"/>
            <column index="3" name="image_url" type="STRING"/>
            <column index="4" name="active" type="BOOLEAN" defaultValue="1"/>
            <column index="5" name="units_in_stock" type="NUMERIC"/>
            <column index="6" name="unit_price" type="NUMERIC"/>
            <column index="7" name="category_id" type="NUMERIC"/>
        </loadData>
    </changeSet>

