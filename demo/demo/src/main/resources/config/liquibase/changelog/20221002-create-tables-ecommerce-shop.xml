<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:pro="http://www.liquibase.org/xml/ns/pro" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="20230225_1706-CREATE-ECOM-PRODUCT-CATEGORY" author="ntkien16">
        <createTable tableName="ECOM_PRODUCT_CATEGORY">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="category_name" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20230225_1707-CREATE-ECOM-PRODUCT" author="ntkien16">
        <createTable tableName="ECOM_PRODUCT">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="sku" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="description" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="unit_price" type="DECIMAL(13,2)">
                <constraints nullable="true"/>
            </column>
            <column name="image_url" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="active" type="BIT" defaultValue="1">
                <constraints nullable="true"/>
            </column>
            <column name="units_in_stock" type="INT(11)">
                <constraints nullable="true"/>
            </column>
            <column name="date_created" type="DATETIME(6)" defaultValueComputed="NOW(6)">
                <constraints nullable="true"/>
            </column>
            <column name="last_updated" type="DATETIME(6)" defaultValueComputed="NOW(6)">
                <constraints nullable="true"/>
            </column>
            <column name="category_id" type="BIGINT(20)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20230225_1946-CREATE-ECOM-COUNTRY" author="ntkien16">
        <createTable tableName="ECOM_COUNTRY">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="code" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20230225_1947-CREATE-ECOM-STATE" author="ntkien16">
        <createTable tableName="ECOM_STATE">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="NVARCHAR(500)">
                <constraints nullable="true"/>
            </column>
            <column name="country_id" type="INT">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20230225_1947-CREATE-ECOM-ADDRESS" author="ntkien16">
        <createTable tableName="ECOM_ADDRESS">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="city" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="country" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="state" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="street" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="zip_code" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20230225_1947-CREATE-ECOM-CUSTOMER" author="ntkien16">
        <createTable tableName="ECOM_CUSTOMER">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="first_name" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="last_name" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20230225_1947-CREATE-ECOM-ORDERS" author="ntkien16">
        <createTable tableName="ECOM_ORDERS">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="order_tracking_number" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="total_price" type="DECIMAL(19,2)">
                <constraints nullable="true"/>
            </column>
            <column name="total_quantity" type="int">
                <constraints nullable="true"/>
            </column>
            <column name="billing_address_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="customer_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="shipping_address_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="status" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="date_created" type="datetime(6)">
                <constraints nullable="true"/>
            </column>
            <column name="last_updated" type="datetime(6)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20230225_1947-CREATE-ECOM-ORDER-ITEM" author="ntkien16">
        <createTable tableName="ECOM_ORDER-ITEM">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="image_url" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="quantity" type="int">
                <constraints nullable="true"/>
            </column>
            <column name="unit_price" type="DECIMAL(19,2)">
                <constraints nullable="true"/>
            </column>
            <column name="order_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="product_id" type="bigint">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
